extends layouts/login-layout.pug 

block content 
  .loginContainer 
    h1 Anmelden
    form#registerForm(method="POST", onsubmit="event.preventDefault(); validateForm();")

      p.errorMessage #{errorMessage}

      input(type="text", name="firstName", placeholder="Vorname", value=firstName, required="")
      input(type="text", name="lastName", placeholder="Nachname", value=lastName, required="")
      input(type="text", name="username", placeholder="Benutzername", value=userame, required="")
      input(type="email", name="email", placeholder="Email", value=email, required="")
      input#password(type="password", name="password", placeholder="Passwort", required="")
      input#passwordConf(type="password", name="passwordConf", placeholder="PW bestätigen", required="")
      input(type="submit", value="anmelden")
    a(href="/login") Schon registriert? Login hier.
  
  script.
    const form = document.getElementById("registerForm");

    const passwordField = document.getElementById("password");
    const passwordConfirmField = document.getElementById("passwordConf");

  
    validateForm = () => {
      if(passwordField.value != passwordConfirmField.value){
        alert("Die Passwörter stimmen nicht überein!");
      }
      else {
        form.submit();
      }
    }
  
